# ⚠️ Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it's in .gitignore

# Server Configuration
PORT=3000
NODE_ENV=production
APP_VERSION=1.0.0
LOG_LEVEL=info

# API Keys (Server-side only - NEVER expose to client)
TOMTOM_API_KEY=your_tomtom_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# External Services
EMAIL_SERVICE_URL=
EMAIL_API_KEY=

# Frontend Build Variables (VITE_ prefix = bundled at build time)
# These are safe to expose as they're used client-side
VITE_APP_BASE_URL=https://romuo.ch
VITE_API_BASE_URL=https://romuo.ch/api
VITE_GA_MEASUREMENT_ID=
